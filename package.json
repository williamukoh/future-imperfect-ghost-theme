{
    "name": "future-imperfect-ghost-theme",
    "description": "A Ghost theme adaptation of HTML5 Up Future Imperfect template.",
    "version": "0.0.1",
    "engines": {
        "ghost": ">=2.0.0",
        "ghost-api": "v2"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/img/theme-desktop.png",
        "mobile": "assets/img/theme-mobile.png"
    },
    "scripts": {
        "start": "gulp",
        "test": "gscan .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "@williamukoh",
        "url": "https://github.com/williamukoh/future-imperfect-ghost-theme"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/williamukoh/future-imperfect-ghost-theme"
    },
    "bugs": "https://github.com/williamukoh/future-imperfect-ghost-theme/issues",
    "contributors": "https://github.com/williamukoh/future-imperfect-ghost-theme/graphs/contributors",
    "devDependencies": {
        "gscan": "^2.0.0"
    },
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
